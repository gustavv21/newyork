<% include ../partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= guide.name %> <%= guide.surname %></div>
    <form class="ui form" action="/guide/<%= guide._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="guide[name]" value="<%= guide.name %>">
        </div>
        <div class="field">
            <label>Adress</label>
            <input type="text" name="guide[adress]" value="<%= guide.adress %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="guide[image]" value="<%= guide.image %>">
        </div>
        <div class="field">
            <label>Description of the place</label>
            <textarea name="guide[dsc]"><%= guide.dsc %></textarea>
        </div>
        <button class="ui inverted purple button">Make a Change</button>
    </form>
</div>
<% include ../partials/footer %>